<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="360dp"
            android:layout_height="240dp"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <ImageView
                android:id="@+id/imageView_avatar_01"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="onClickAvatar"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/avatar_01" />

            <ImageView
                android:id="@+id/imageView_avatar_02"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="onClickAvatar"
                app:layout_column="1"
                app:layout_row="0"
                app:srcCompat="@drawable/avatar_02" />

            <ImageView
                android:id="@+id/imageView_avatar_03"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="onClickAvatar"
                app:layout_column="2"
                app:layout_row="0"
                app:srcCompat="@drawable/avatar_03" />

            <ImageView
                android:id="@+id/imageView_avatar_04"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="onClickAvatar"
                app:layout_column="0"
                app:layout_row="1"
                app:srcCompat="@drawable/avatar_04" />

            <ImageView
                android:id="@+id/imageView_avatar_05"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="onClickAvatar"
                app:layout_column="1"
                app:layout_row="1"
                app:srcCompat="@drawable/avatar_05" />

            <ImageView
                android:id="@+id/imageView_avatar_06"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="onClickAvatar"
                app:layout_column="2"
                app:layout_row="1"
                app:srcCompat="@drawable/avatar_06" />

        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:id="@+id/textView_avatar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_light"
            android:text="@string/avatar_selector_choose_title"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

</RelativeLayout>